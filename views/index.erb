 <div class="mdl-grid main-head">
  <div class="mdl-cell mdl-cell--8-col">
    <span class="welcome-text">Welcome to <%= @title %></span>

  </div>
  <div class="mdl-cell mdl-cell--4-col">
    <ul>
      <% tags.each do |tag| %>
      <li><%= tag %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="mdl-grid articles">
  <% if user %>
  <div class="">
    <div class="mdl-cell mdl-cell--12-col">
      <span>Most recently viewed articles:</span>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
      <% last_visted.each do |article| %>
      <div class="mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= article['title'] %></h2>
        </div>
        <div class="mdl-card__supporting-text"><%= article['summary'] %></div>
        <div class="mdl-card__actions mdl-card--border">
          <a href="/articles/<%= article['id'] %>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            View Article
          </a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
  <div>
    <div class="mdl-cell mdl-cell--12-col">
      <span>Top articles:</span>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
      <% articles.each do |article| %>
      <div class="mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= article['title'] %></h2>
        </div>
        <div class="mdl-card__supporting-text"><%= article['summary'] %></div>
        <div class="mdl-card__actions mdl-card--border">
          <a href="/articles/<%= article['id'] %>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            View Article
          </a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>